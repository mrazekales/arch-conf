#!/bin/bash
# ----------------------------------------------------------------------------------------
# Desktop Installer
# ----------------------------------------------------------------------------------------
# author:     Mrazek Ales
#             https://github.com/mrazekales
#
# project:    https://github.com/mrazekales/myarch-installer
#
# license:    LGPL-3.0 (http://opensource.org/licenses/lgpl-3.0.html)
#
# ----------------------------------------------------------------------------------------
# ----------------------------------------------------------------------------------------
# GLOBAL STRINGS
# ----------------------------------------------------------------------------------------
apptitle="myArch-installer(Desktop Environment) - Version: 0.1 (LGPLv3)"

txtpressanykey="Press any key to continue."
txtexit="Exit"
txtback="Back"
txtignore="Ignore"
txtoptional="(Optional)"
txtdone="Done"

helper=""
displaymanager=""
desktopenv=""
powermanager=""
networkmanager=""
swapfile="OFF"

# ----------------------------------------------------------------------------------------
# ----------------------------------------------------------------------------------------
# MAIN MENU
# ----------------------------------------------------------------------------------------
main_menu(){

  if [ "$1" = "" ]; then
    nextitem="."
  else
    nextitem=$1
  fi
  options=()
  options+=("AUR helper" "$helper")
  options+=("Display Manager" "$displaymanager")
  options+=("Desktop Environment" "$desktopenv")
  options+=("" "")
  options+=("Power Manager" "$powermanager")
  options+=("Network Manager" "$networkmanager")
  options+=("Swapfile" "$swapfile")
  
  if [ "$swapfile" = "ON" ]; then
    options+=("         Remove Swapfile" "")
  fi
  
  sel=$(whiptail --backtitle "$apptitle" --title "Main Menu" --menu "" --cancel-button "$txtexit" --default-item "$nextitem" 0 0 0 \
    "${options[@]}" \
    3>&1 1>&2 2>&3)
  if [ "$?" = "0" ]; then
    case $sel in
      "AUR helper")
        helper_menu
        nextitem="AUR helper"
      ;;
      "Display Manager")
        dm_menu
        nextitem="Display Manager"
      ;;
      "Desktop Environment")
        nextitem="Desktop Environment"
      ;;
      "Power Manager")
        nextitem="Power Manager"
      ;;
      "Network Manager")
        nextitem="Network Manager"
      ;;
      "Swapfile")
        create_swapfile
        nextitem="Swapfile"
      ;;
      "         Remove Swapfile")
        remove_swapfile
        nextitem="Swapfile"
      ;;
    esac
    main_menu "$nextitem"
  else
    clear
  fi
}
# ----------------------------------------------------------------------------------------
# ----------------------------------------------------------------------------------------
# BASE_DEV/AUR HELPER
# ----------------------------------------------------------------------------------------
helper_menu(){
  if [ "$1" = "" ]; then
    nextitem="."
  else
    nextitem=$1
  fi
  options=()
  options+=("yay" "")
  sel=$(whiptail --backtitle "$apptitle" --title "Display Manager" --menu "" --cancel-button "$txtexit" --default-item "$nextitem" 0 0 0 \
    "${options[@]}" \
    3>&1 1>&2 2>&3)
  if [ "$?" = "0" ]; then
    case $sel in
      "yay")
        install_yay
      ;;
    esac
  else
    clear
  fi
}

install_yay(){
  clear
  echo "Installing 'base-devel'"
  sudo pacman -S base-devel
  echo "all"
  
  echo "Installing git"
  yes | sudo pacman -S git
  
  echo "git clone https://aur.archlinux.org/yay.git"
  git clone https://aur.archlinux.org/yay.git
  echo "cd yay"
  cd yay
  echo "makepkg -si"
  makepkg -si
  echo "cd .."
  cd ..
  echo "rm -r yay"
  rm -r yay
  echo "$txtdone" 
  helper="yay"
  pressanykey
}

# ----------------------------------------------------------------------------------------
# ----------------------------------------------------------------------------------------
# DISPLAY MANAGER
# ----------------------------------------------------------------------------------------
dm_menu(){
  if [ "$1" = "" ]; then
    nextitem="."
  else
    nextitem=$1
  fi
  options=()
  options+=("LightDM" "")
  options+=("ly" "")
  sel=$(whiptail --backtitle "$apptitle" --title "Display Manager" --menu "" --cancel-button "$txtexit" --default-item "$nextitem" 0 0 0 \
    "${options[@]}" \
    3>&1 1>&2 2>&3)
  if [ "$?" = "0" ]; then
    case $sel in
      "LightDM")
        install_lightdm
      ;;
      "ly")
        install_ly
      ;;
    esac
  fi
}

install_lightdm(){

  clear
  echo "install LightDM"

  yes | sudo pacman -S lightdm lightdm-gtk-greeter
  yay -S lightdm-slick-greeter lightdm-pantheon-greeter lightdm-unity-greeter

  if [ "$1" = "" ]; then
    nextitem="."
  else
    nextitem=$1
  fi

  options=()
  options+=("lightdm-gtk-greeter" "")
  options+=("lightdm-slick-greeter" "")
  options+=("lightdm-pantheon-greeter" "")
  options+=("lightdm-unity-greeter" "")
  options+=("load config file" "")
  sel=$(whiptail --backtitle "$apptitle" --title "Set LightDM greeter" --menu "" --cancel-button "$txtexit" --default-item "$nextitem" 0 0 0 \
    "${options[@]}" \
    3>&1 1>&2 2>&3)
  if [ "$?" = "0" ]; then
    if [ "$sel" = "load config file" ]; then
      load_lightdm_conf
    else
      sudo sh -c "sed -i '/greeter-session=/c\greeter-session=$sel' /etc/lightdm/lightdm.conf"
    fi
  else
    clear
  fi
  clear
  sudo systemctl enable lightdm.service
  sudo systemctl diable ly.service

  displaymanager="LightDM"
  pressanykey
}

load_lightdm_conf(){
  echo "cp /etc/lightdm/lightdm.conf /etc/lightdm/lightdm.conf.backup"
  sudo cp /etc/lightdm/lightdm.conf /etc/lightdm/lightdm.conf.backup

  echo "cp config-files/lightdm/lightdm.conf /etc/lightdm/lightdm.conf"
  sudo cp config-files/lightdm/lightdm.conf /etc/lightdm/lightdm.conf

  echo "LightDM config Set"
  pressanykey
}

install_ly(){
  clear
  echo "Installing ly"
  yay -S ly-git

  sudo systemctl disable lightdm
  sudo systemctl enable ly.service
  sudo systemctl disable getty@tty2.service

  displaymanager="ly"
  pressanykey
}

load_ly_conf(){
  echo "cp /etc/ly/config.ini /etc/ly/config.ini.backup"
  sudo cp /etc/ly/config.ini /etc/ly/config.ini.backup

  echo "cp config-files/ly/config.ini /etc/ly/config.ini"
  sudo cp config-files/ly/config.ini /etc/ly/config.ini

  echo "ly config Set"
  pressanykey
}

# ----------------------------------------------------------------------------------------
# ----------------------------------------------------------------------------------------
# DESKTOP ENVIRONMENT
# ----------------------------------------------------------------------------------------
de_menu(){
  if [ "$1" = "" ]; then
    nextitem="."
  else
    nextitem=$1
  fi
  options=()
  options+=("i3" "")
  options+=("Gnome" "")
  sel=$(whiptail --backtitle "$apptitle" --title "Desktop Environment/Window Manager" --menu "" --cancel-button "$txtexit" --default-item "$nextitem" 0 0 0 \
    "${options[@]}" \
    3>&1 1>&2 2>&3)
  if [ "$?" = "0" ]; then
    case $sel in
      "i3")
        install_i3
      ;;
      "Gnome")
        install_gnome
      ;;
    esac
  fi
}

install_i3(){
  echo "Installing i3 dmenu"
  yes | sudo pacman -S i3 dmenu
  pressanykey
}

load_i3_conf(){
  echo "cp /etc/lightdm/lightdm.conf /etc/lightdm/lightdm.conf.backup"
  sudo cp /etc/lightdm/lightdm.conf /etc/lightdm/lightdm.conf.backup

  echo "cp config-files/i3/config /home/$USER/.config/i3/config"
  sudo cp config-files/i3/config /home/$USER/.config/i3/config

  echo "i3 config loaded"
  pressanykey
}

install_gnome(){
  echo "gnome"
}

# ----------------------------------------------------------------------------------------
# ----------------------------------------------------------------------------------------
# SWAP FILE
# ----------------------------------------------------------------------------------------
create_swapfile(){
  clear
  if [ -e /swapfile ]; then
    echo "Removing old swapfile ..."
    remove_swapfile
  fi

  ramsize=$(cat /proc/meminfo | grep MemTotal | awk '{ print $2 }')
  echo "RAM: $ramsize B"

  if (( $ramsize >= 9000 )); then
    swapsize=$(($ramsize/2000))"M"
  elif (( $ramsize >= 3000 )); then
    swapsize=$(($ramsize/1000))"M"
  else
    swapsize=$(($ramsize/500))"M"
  fi
  echo "SWAP FILE: $swapsize M"
  echo "fallocate -l ${swapsize//%1/M} /swapfile"
  sudo fallocate -l ${swapsize//%1/M} /swapfile
  echo "chmod 600 /swapfile"
  sudo chmod 600 /swapfile
  echo "mkswap /swapfile"
  sudo mkswap /swapfile
  echo "swapon /swapfile"
  sudo swapon /swapfile
  #echo "'/swapfile swap swap defaults 0 0' >> /etc/fstab"
  #sudo echo "/swapfile swap swap defaults 0 0" >> /etc/fstab
  echo '/swapfile swap swap defaults 0 0' | sudo tee --append /etc/fstab
  swapfile="ON"
  pressanykey
}

remove_swapfile(){
clear
  echo "swapoff -a"
  sudo swapoff -a
  echo "rm -f /swapfile"
  sudo rm -f /swapfile
  echo "sed -i '/swapfile swap swap defaults 0 0' /etc/fstab"
  sudo sh -c "sed -i '/swapfile swap swap defaults 0 0/d' /etc/fstab"
  #sudo sed -i '/swapfile swap swap defaults 0 0/d' /etc/fstab
  swapfile="OFF"
  pressanykey
}

# ----------------------------------------------------------------------------------------
# ----------------------------------------------------------------------------------------
